<h1>Here's our menu!</h1>

<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        <h2>Burgers available</h2>
        {{#each burgers}}
        {{#unless this.devoured}}
        <div>
          <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
            <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
          </form>
        </div>
        {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        <h2>Burgers Eaten</h2>
        {{#each burgers}}
        {{#if this.devoured}}
        <div class='burgerEaten'>
          <div>
            {{this.burger_name}}
          </div>
        </div>
        {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h2>Add your own burger!</h2>

<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Your own burger here!">
      <button type="submit" class="addBurgerButton">Add your Burger!</button>
    </form>
  </div>
</div>